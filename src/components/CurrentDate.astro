---
import DateDisplay from './Date.astro';

const now = new Date();
const dateStr = now.toLocaleDateString('en-US', {month: 'long', weekday:'short', day: 'numeric'});
const dateArr = dateStr.split(' ');

const weekday = dateArr[0].split(',')[0];
const month = dateArr[1];
const date = dateArr[2];
---
<div class="w-fit flex flex-col gap-6">
  <p class="text-3xl font-medium">{month}</p>
  <div class="flex flex-col items-center justify-center">
      <span class="text-5xl">{date}</span>
      <span class="text-lg">{weekday.toUpperCase()}</span>
  </div>
</div>
