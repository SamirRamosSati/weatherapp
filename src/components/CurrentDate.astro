---
const { selectedDate } = Astro.props;

const dateObj = new Date(selectedDate ?? new Date());
const day = dateObj.getDate();
const weekday = dateObj.toLocaleDateString("en-US", { weekday: "short" }).toUpperCase();
const month = dateObj.toLocaleDateString("en-US", { month: "long" });
---

<div class="flex flex-col items-center gap-2">
  <div class="text-xl font-bold">{month}</div>
  <div class="text-5xl font-semibold">{day}</div>
  <div class="text-md uppercase tracking-widest">{weekday}</div>
</div>
